.grid-image {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    grid-gap: 20px;
    width: 1000px;
    height: 550px;
    transition: 0.25s;
}
.bg-video{
    position: absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    object-fit: cover;
    z-index: 1;
    pointer-events: none;
    transition: opacity 0.5s ease;
    opacity: 0;
}

.grid-image .box {
    position: relative;
    background: var(--img);
    background-size: cover;
    transition: 0.25s;
    display: flex;
    justify-content: center;
    align-items: center;
    filter:grayscale(0) brightness(1.0)
}

.grid-image:hover .box {
    filter:grayscale(1)
}

.grid-image .box:hover{
    filter:grayscale(0) brightness(1.1);
    border-radius:5px;
}
.grid-image .box:hover .bg-video{
    opacity: 1;
    border-radius: 5px;
}

.grid-image:has(.one:hover) {
    grid-template-columns: 2fr 0.5fr 0.5fr 0.5fr 0.5fr; 
    background: none;
}
.grid-image:has(.two:hover) {
    grid-template-columns: 0.5fr 2fr 0.5fr 0.5fr 0.5fr;
    background: none;
}
.grid-image:has(.three:hover) {
    grid-template-columns: 0.5fr 0.5fr 2fr 0.5fr 0.5fr;
    background: none;
}
.grid-image:has(.four:hover) {
    grid-template-columns: 0.5fr 0.5fr 0.5fr 2fr 0.5fr;
    background: none;
}
.grid-image:has(.five:hover) {
    grid-template-columns: 0.5fr 0.5fr 0.5fr 0.5fr 2fr;
    background: none;
}

.grid-image .box::before {
    content: '';
    position: absolute;
    width: 100%;
    top: -1px;
    height: calc(100% + 2px);
    background: linear-gradient(#000, transparent transparent transparent #000);

}

.grid-image .box:nth-child(even){
    transform: translateY(30px);
}
.grid-image .box:nth-child(odd){
    transform: translateY(-30px);
}

.grid-image .box::after{
    content: attr(data-text);
    position: absolute;
    bottom: -100px;
    background: var(--green-accent);
    color: #fff;
    font-size: 1em;
    font-weight: 600;
    padding: 5px 10px;
    border-radius: 5px;
    white-space: nowrap;
    transition: 0.5s;
    text-transform: uppercase;
    letter-spacing:0.5em;
    opacity: 0;
    transition-delay: 0s;
     -webkit-box-reflect: below 2px linear-gradient(transparent,#0003);
}
.grid-image .box:hover::after {
    opacity: 1;
    bottom: -60px;
    transition-delay: 0.25s;
}
